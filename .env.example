# FOGIS API Configuration
FOGIS_USERNAME=your_fogis_username
FOGIS_PASSWORD=your_fogis_password
FOGIS_BASE_URL=https://fogis.svenskfotboll.se

# Database Configuration
DATABASE_URL=sqlite:///./nlp_reporter.db
# For production: postgresql://user:password@localhost/nlp_reporter

# Voice Processing Configuration
HOTWORD_SENSITIVITY=0.5
HOTWORD_MODEL_PATH=./models/porcupine/
WHISPER_MODEL_SIZE=base
WHISPER_LANGUAGE=sv
AUDIO_SAMPLE_RATE=16000
AUDIO_CHUNK_SIZE=1024

# Text-to-Speech Configuration
TTS_ENGINE=kokoro
TTS_VOICE=default
TTS_SPEED=1.0
TTS_VOLUME=0.8

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_RELOAD=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/nlp_reporter.log

# Development Configuration
DEBUG=true
TESTING=false
ENVIRONMENT=development

# Security Configuration
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Match Event Configuration
DEFAULT_MATCH_ID=
AUTO_SYNC_EVENTS=true
SYNC_INTERVAL_SECONDS=30
MAX_RETRY_ATTEMPTS=3

# Audio Device Configuration (optional)
# AUDIO_INPUT_DEVICE_INDEX=0
# AUDIO_OUTPUT_DEVICE_INDEX=0

# Performance Configuration
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT_SECONDS=30
CACHE_TTL_SECONDS=300
